
@{
    ViewBag.Title = "Index";
}

<h2>Poslat notifikaci:</h2>

@using (Html.BeginForm("Add", "Notifikace", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" })) // Umožní zpracovat nahrané soubory
{
    <div class="form-group">
        <label class="col-sm-2 control-label">Cílový uživatel (id):</label>
        <div class="col-sm-10">
            @Html.TextBox("userTo")
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Text notifikace</label>
        <div class="col-sm-10">
            @Html.TextArea("text", new { @class = "form-control formatedtext" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Odeslat notifikace</button>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Poslat jako server:</label>
        <div class="col-sm-offset-2 col-sm-10">
            @Html.CheckBox("sendIncognito", true)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Druh odměny:</label>
        <div class="col-sm-10">
            @Html.TextBox("reward", "0")
        </div>
    </div>

    <p>Odměny:</p>
    <ul>
        <li>0 - žádná</li>
        <li>1 - 10 krevitů</li>
    </ul>
}

<style>
    .mce-path { /* CSS */
        display: none !important;
    }
</style>
<script src="@Url.Content("~/Scripts/tinymce/tinymce.js")"></script>
<script>
    tinymce.init({
        selector: '.formatedtext', branding: false, plugins: 'code,emoticons,lists,advlist,autolink,autoresize,autosave,codesample,textcolor,colorpicker,fullscreen,hr,image,link,media,preview,searchreplace,table,textpattern,wordcount', toolbar: 'image,code,emoticons,bulllist,numlist,restoredraft,codesample,forecolor,backcolor,fullscreen,preview,searchreplace', width: '100%', language: 'cs'


    });</script>