@model DataAccess.Models.KnihovnaUser
@{
    ViewBag.Title = "UzivatelDetail";
}

<h2>Detail uživatele @Model.Name</h2>

@using (Html.BeginForm("UpdateUser", "Books", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" })) // Umožní zpracovat nahrané soubory
{
    @Html.Hidden("id", @Model.Id)

    <p>Obrázek: @Model.ImageName </p>

    <div class="form-group">
        <div class="col-sm-10">
            <input type="file" name="picture" />

            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="@Url.Content("~/Uploads/KnihovnaUzivatele/" + Model.ImageName)" />
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Aktualizovat</button>
        </div>
    </div>
}
