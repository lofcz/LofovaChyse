@model DataAccess.Models.Book

@{
    ViewBag.Title = "Edit";
}

<h2>@Model.Name - Editace</h2>


@using (Html.BeginForm("Update", "Books", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" })) // Umožní zpracovat nahrané soubory
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.ImageName)
    @Html.HiddenFor(x => x.Version)
    @Html.HiddenFor(x => x.OwnerId.Id)
    @Html.HiddenFor(x => x.LastEditDateTime)
    @Html.Hidden("userName", User.Identity.Name)

    <div class="form-group">
        <label class="col-sm-2 control-label">Co se změnilo?</label>
        <div class="col-sm-10">
            @Html.TextArea("sumText", new { @class = "form-control formatedtext" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Sekce</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Category.Id, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Category)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Sekce ID</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.SectionId, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.SectionId)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Placená?</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.IsPayed, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.IsPayed)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Cena</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.UnlockPrice, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.UnlockPrice)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Kategorie</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Kategorie.Id, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Kategorie.Id)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Název knihy</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)

        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Autor</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Author)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Rok vydání</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.PublishedYear, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PublishedYear)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Popis</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control formatedtext" })

        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Kategorie</label>
        <div class="col-sm-10">
            @Html.DropDownList("categoryId", new SelectList(ViewBag.Categories, "Id", "Name", Model.Category.Id), new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Obrázek</label>
        <div class="col-sm-10">
            <input type="file" name="picture" />

            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="@Url.Content("~/Uploads/Book/" + Model.ImageName)" />
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Upravit knihu</button>
        </div>
    </div>
}

<style>
    .mce-path { /* CSS */
        display: none !important;
    }
</style>
<script src="@Url.Content("~/Scripts/tinymce/tinymce.js")"></script>
<script>
    tinymce.init({
        selector: '.formatedtext', branding: false, plugins: 'code,emoticons,lists,advlist,autolink,autoresize,autosave,codesample,textcolor,colorpicker,fullscreen,hr,image,link,media,preview,searchreplace,table,textpattern,wordcount', toolbar: 'image,code,emoticons,bulllist,numlist,restoredraft,codesample,forecolor,backcolor,fullscreen,preview,searchreplace', width: '100%', language: 'cs'


    });</script>